<odoo>
  <record id="view_hr_contract_form_chile" model="ir.ui.view">
    <field name="name">hr.contract.chile.form</field>
    <field name="model">hr.contract</field>
    <!-- Si tienes la pesta침a de Informaci칩n salarial, hereda esta -->
    <field name="inherit_id" ref="hr_contract_salary.hr_contract_view_form"/>
    <field name="arch" type="xml">

      <!-- Inserta tus campos dentro del group salary con el mismo look -->
      <xpath expr="//page[@name='information']//group[@name='salary']" position="inside">
        <label for="otros_imp"/>
        <div class="o_row mw-50" name="otros_imp_row">
          <field name="otros_imp" class="oe_inline o_hr_narrow_field" nolabel="1"/>
          <div class="mb-3">/ mes</div>
        </div>

        <label for="otro_no_imp"/>
        <div class="o_row mw-50" name="otro_no_imp_row">
          <field name="otro_no_imp" class="oe_inline o_hr_narrow_field" nolabel="1"/>
          <div class="mb-3">/ mes</div>
        </div>

        <group name="cl_allowances" col="2" class="o_inner_group">
          <field name="colacion"/>
          <field name="movilizacion"/>
          <field name="viatico_santiago"/>
          <field name="anticipo_sueldo"/>
          <field name="gratificacion_legal"/>
        </group>
      </xpath>

      <!-- Tus p치ginas extra -->
      <xpath expr="//page[@name='information']" position="after">
        <page string="Carga Familiar" name="carga_familiar">
          <group>
            <field name="carga_familiar"/>
            <field name="carga_familiar_maternal"/>
            <field name="carga_familiar_invalida"/>
          </group>
        </page>

        <page string="Salud" name="health">
          <group>
            <field name="isapre_id"/>
            <field name="isapre_moneda" invisible="isapre_id == False"/>
            <field name="isapre_cotizacion_uf" invisible="isapre_id == False"/>
            <field name="isapre_fun" invisible="isapre_id == False"/>
            <field name="isapre_cuenta_propia" invisible="isapre_id == False"/>
            <field name="seguro_complementario_id"/>
            <field name="seguro_complementario_moneda"/>
            <field name="seguro_complementario"/>
          </group>
        </page>

        <page string="Fondos de Pensi칩n" name="afp">
          <group>
            <field name="pension"/>
            <field name="sin_afp"/>
            <field name="sin_afp_sis"/>
            <field name="afp_id" invisible="not pension"/>
            <field name="apv_id"/>
            <field name="aporte_voluntario_moneda"/>
            <field name="aporte_voluntario"/>
            <field name="forma_pago_apv"/>
          </group>
        </page>
      </xpath>

    </field>
  </record>
</odoo>
